{
    "description": "describe pipeline",
    "processors": [
        {
            "foreach": {
                "field": "question",
                "processor": {
                    "remove": {
                        "field": "_ingest._value.content",
                        "if": "ctx.format == 'multiline'"
                    }
                }
            }
        },
        {
            "foreach": {
                "field": "answer",
                "processor": {
                    "remove": {
                        "field": "_ingest._value.content",
                        "if": "ctx.format == 'multiline'"
                    }
                }
            }
        }
    ]
}